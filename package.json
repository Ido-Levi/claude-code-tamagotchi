{
  "name": "claude-code-tamagotchi",
  "version": "1.0.0",
  "description": "A virtual pet that lives in your Claude Code statusline",
  "main": "src/index.ts",
  "bin": {
    "claude-code-tamagotchi": "./bin/claude-code-tamagotchi"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "demo": "bun run scripts/demo.ts",
    "reset": "bun run scripts/reset-pet.ts",
    "build": "bun build src/index.ts --outdir=dist --target=node",
    "dev": "bun run --watch src/index.ts",
    "prepublishOnly": "bun run build"
  },
  "keywords": ["claude-code", "tamagotchi", "pet", "statusline", "virtual-pet", "cli", "terminal"],
  "author": "Ido Levi",
  "license": "MIT",
  "homepage": "https://github.com/Ido-Levi/claude-code-tamagotchi#readme",
  "bugs": {
    "url": "https://github.com/Ido-Levi/claude-code-tamagotchi/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ido-Levi/claude-code-tamagotchi.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
